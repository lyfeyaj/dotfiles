[alias]
	co = checkout
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[color]
	ui = auto

[core]
	excludesfile = ~/.gitignore
	autocrlf = false
	quotepath = false

[apply]
	whitespace = nowarn

[format]
	pretty = %C(yellow)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr)%Creset by %C(blue)%an%Creset

[difftool]
	prompt = false

[include]
	path = ~/.gitconfig.local

